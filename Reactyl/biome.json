{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "maxSize": 10485760,
    "includes": [
      "**",
      "!**/dist/",
      "!**/build/",
      "!**/node_modules/",
      "!**/*.min.js",
      "!**/coverage/",
      "!**/.cache/",
      "!**/src/libs",
      "!**/*.d.ts",
      "!**/public/cache",
      "!**/*.config.js",
      "!**/*.config.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "formatWithErrors": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedFunctionParameters": "warn",
        "noUnusedPrivateClassMembers": "warn",
        "noUnusedImports": "warn",
        "noConstantCondition": "error",
        "noUnreachable": "error",
        "noSelfAssign": "error"
      },
      "style": {
        "useConst": "warn",
        "useTemplate": "warn",
        "noNonNullAssertion": "warn",
        "useNodejsImportProtocol": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noDebugger": "warn",
        "noArrayIndexKey": "warn",
        "noDoubleEquals": "warn"
      },
      "complexity": {
        "noStaticOnlyClass": "warn",
        "noUselessConstructor": "warn",
        "noUselessTernary": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "arrowParentheses": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
